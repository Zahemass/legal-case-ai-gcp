# Legal Case AI - Environment Configuration Template
# Created: 2025-11-01 10:10:34 UTC
# Author: Zahemassg
# Copy this file to .env and update with your values

# =================
# BASIC CONFIGURATION
# =================

# Environment (development, staging, production)
NODE_ENV=development
ENVIRONMENT=development

# Service Configuration
PORT=3000
API_VERSION=v1

# =================
# GOOGLE CLOUD CONFIGURATION  
# =================

# Google Cloud Project
GOOGLE_CLOUD_PROJECT=your-legal-ai-project-id
GOOGLE_CLOUD_REGION=us-central1
GOOGLE_CLOUD_ZONE=us-central1-a

# Firebase Configuration
FIREBASE_PROJECT_ID=your-legal-ai-project-id
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_DATABASE_URL=https://your-project-default-rtdb.firebaseio.com/
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:web:abcdef123456

# Firebase Service Account (JSON string or path to file)
FIREBASE_SERVICE_ACCOUNT_KEY=path/to/service-account-key.json
# OR as JSON string:
# FIREBASE_SERVICE_ACCOUNT_KEY='{"type":"service_account","project_id":"your-project",...}'

# =================
# STORAGE CONFIGURATION
# =================

# Cloud Storage Buckets
STORAGE_BUCKET=your-project-legal-documents
REPORTS_BUCKET=your-project-legal-reports  
BACKUPS_BUCKET=your-project-legal-backups
TEMP_BUCKET=your-project-legal-temp

# Storage Settings
MAX_FILE_SIZE=52428800
ALLOWED_MIME_TYPES=application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document,text/plain

# =================
# DATABASE CONFIGURATION
# =================

# Firestore
FIRESTORE_DATABASE_ID=(default)
FIRESTORE_EMULATOR_HOST=localhost:8080

# =================
# AI/ML CONFIGURATION
# =================

# Google AI (Gemini)
GOOGLE_AI_API_KEY=your-google-ai-api-key

# Vertex AI
VERTEX_AI_LOCATION=us-central1
VERTEX_AI_MODEL=gemini-1.5-pro

# Document AI
DOCUMENT_AI_PROCESSOR_ID=your-processor-id
DOCUMENT_AI_LOCATION=us

# =================
# EMAIL CONFIGURATION
# =================

# Email Provider (sendgrid, smtp, gmail)
EMAIL_PROVIDER=sendgrid

# SendGrid Configuration
SENDGRID_API_KEY=your-sendgrid-api-key

# SMTP Configuration (if using SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com  
SMTP_PASS=your-app-password

# Email Settings
FROM_EMAIL=noreply@legalcaseai.com
FROM_NAME=Legal Case AI
REPLY_TO=support@legalcaseai.com

# =================
# SECURITY CONFIGURATION
# =================

# API Keys
INTERNAL_API_KEY=your-internal-api-key-for-service-communication
JWT_SECRET=your-jwt-secret-key

# CORS Settings
ALLOWED_ORIGINS=https://legalcaseai.com,https://app.legalcaseai.com,http://localhost:3000
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Session Configuration
SESSION_SECRET=your-session-secret
SESSION_TIMEOUT=3600000

# =================
# EXTERNAL INTEGRATIONS
# =================

# Legal Database APIs (optional)
WESTLAW_API_KEY=your-westlaw-api-key
LEXIS_API_KEY=your-lexis-api-key

# Other Integrations
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx
WEBHOOK_SECRET=your-webhook-secret

# =================
# MONITORING & LOGGING
# =================

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
ENABLE_REQUEST_LOGGING=true

# Monitoring
ENABLE_HEALTH_CHECKS=true
ENABLE_METRICS=true
METRICS_PORT=9090

# Error Tracking (Sentry, etc.)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
ERROR_REPORTING_PROJECT_ID=your-project-id

# =================
# FEATURE FLAGS
# =================

# AI Features
ENABLE_AI_ANALYSIS=true
ENABLE_AI_CHAT=true
ENABLE_DOCUMENT_EXTRACTION=true
ENABLE_PDF_GENERATION=true

# Advanced Features
ENABLE_REAL_TIME_COLLABORATION=true
ENABLE_ADVANCED_SEARCH=true  
ENABLE_WORKFLOW_AUTOMATION=true
ENABLE_MOBILE_API=true

# Beta Features
ENABLE_VOICE_TRANSCRIPTION=false
ENABLE_MULTILINGUAL_SUPPORT=false
ENABLE_BLOCKCHAIN_VERIFICATION=false

# =================
# PERFORMANCE CONFIGURATION
# =================

# Caching
ENABLE_REDIS_CACHE=false
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Database Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_TIMEOUT=30000

# Processing Limits
MAX_CONCURRENT_EXTRACTIONS=5
MAX_CONCURRENT_ANALYSES=3
MAX_DOCUMENTS_PER_CASE=100
MAX_CASES_PER_USER=50

# =================
# DEVELOPMENT CONFIGURATION
# =================

# Development Tools
ENABLE_DEBUG_MODE=false
ENABLE_VERBOSE_LOGGING=false
ENABLE_API_DOCS=true
ENABLE_PLAYGROUND=false

# Testing
TEST_DATABASE_URL=test-database-url
SKIP_AUTH_IN_TESTS=true

# Local Development
USE_EMULATORS=false
FIRESTORE_EMULATOR_HOST=localhost:8080
STORAGE_EMULATOR_HOST=localhost:9199
PUBSUB_EMULATOR_HOST=localhost:8085

# =================
# BUSINESS CONFIGURATION
# =================

# Subscription & Billing
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Pricing
FREE_TIER_DOCUMENT_LIMIT=10
PRO_TIER_DOCUMENT_LIMIT=1000
ENTERPRISE_TIER_DOCUMENT_LIMIT=10000

# Usage Limits
API_CALLS_PER_HOUR=1000
STORAGE_LIMIT_GB=100
ANALYSIS_CREDITS_PER_MONTH=100

# =================
# COMPLIANCE CONFIGURATION
# =================

# Data Privacy
ENABLE_GDPR_COMPLIANCE=true
ENABLE_CCPA_COMPLIANCE=true
DATA_RETENTION_DAYS=2555
AUDIT_LOG_RETENTION_DAYS=3650

# Security
ENABLE_ENCRYPTION_AT_REST=true
ENABLE_FIELD_LEVEL_ENCRYPTION=false
REQUIRE_2FA_FOR_ADMIN=true
PASSWORD_POLICY_ENABLED=true

# Legal
TERMS_OF_SERVICE_URL=https://legalcaseai.com/terms
PRIVACY_POLICY_URL=https://legalcaseai.com/privacy
COOKIE_POLICY_URL=https://legalcaseai.com/cookies

# =================
# NOTIFICATION CONFIGURATION
# =================

# Push Notifications
FCM_SERVER_KEY=your-fcm-server-key
ENABLE_PUSH_NOTIFICATIONS=true

# Webhook Notifications
WEBHOOK_TIMEOUT=30000
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_RETRY_DELAY=5000

# Email Notifications
ENABLE_EMAIL_NOTIFICATIONS=true
EMAIL_RATE_LIMIT=100
EMAIL_QUEUE_SIZE=1000

# =================
# ANALYTICS CONFIGURATION
# =================

# Google Analytics
GA_MEASUREMENT_ID=G-XXXXXXXXXX
ENABLE_ANALYTICS=true

# Custom Analytics
ANALYTICS_ENDPOINT=https://analytics.legalcaseai.com/events
ANALYTICS_API_KEY=your-analytics-api-key

# User Tracking
ENABLE_USER_TRACKING=true
TRACK_PAGE_VIEWS=true
TRACK_FEATURE_USAGE=true

# =================
# BACKUP CONFIGURATION
# =================

# Backup Settings
ENABLE_AUTOMATED_BACKUPS=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=90
BACKUP_ENCRYPTION=true

# Backup Destinations
PRIMARY_BACKUP_BUCKET=your-project-backups
SECONDARY_BACKUP_BUCKET=your-project-backups-secondary

# =================
# MICROSERVICES CONFIGURATION
# =================

# Service URLs (will be populated by deployment)
MAIN_API_URL=https://main-api-service-url.run.app
DOCUMENT_UPLOAD_SERVICE_URL=https://document-upload-service-url.run.app
TEXT_EXTRACTION_SERVICE_URL=https://text-extraction-service-url.run.app
CASE_ANALYSIS_SERVICE_URL=https://case-analysis-service-url.run.app
AI_AGENT_SERVICE_URL=https://ai-agent-service-url.run.app
PDF_GENERATOR_SERVICE_URL=https://pdf-generator-service-url.run.app
EMAIL_SERVICE_URL=https://email-service-url.run.app

# Service Timeouts
SERVICE_TIMEOUT=30000
HEALTH_CHECK_TIMEOUT=5000
CIRCUIT_BREAKER_THRESHOLD=5

# =================
# CUSTOM CONFIGURATION
# =================

# Company Information
COMPANY_NAME=Legal Case AI
COMPANY_URL=https://legalcaseai.com
SUPPORT_EMAIL=support@legalcaseai.com
CONTACT_PHONE=+1-555-123-4567

# Branding
BRAND_COLOR=#2c5282
LOGO_URL=https://legalcaseai.com/logo.png
FAVICON_URL=https://legalcaseai.com/favicon.ico

# Legal Information
BAR_ASSOCIATION_MEMBER=true
LEGAL_DISCLAIMER=This software is for informational purposes only and does not constitute legal advice.